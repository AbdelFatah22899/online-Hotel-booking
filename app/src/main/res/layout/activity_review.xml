<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".review">


    <com.example.a2020_android_training.VerticalScrollview
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:padding="10dp">

            <Spinner
                android:id="@+id/review_hotel_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:gravity="center"
                tools:layout_editor_absoluteX="65dp"
                tools:layout_editor_absoluteY="107dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/review_logo"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:foregroundGravity="center" />

                <TextView
                    android:id="@+id/review_hotel_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="TextView"
                    android:textColor="#610101"
                    android:textSize="28dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/review_total_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginTop="25dp"
                    android:inputType="textPersonName"
                    android:text="rate of 20: "
                    android:textSize="25dp"
                    android:textStyle="bold" />


                <RatingBar
                    android:id="@+id/total_review_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:foregroundGravity="center" />




                    <TextView
                        android:id="@+id/review_quality"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginTop="25dp"
                        android:inputType="textPersonName"
                        android:text="Quality:  "
                        android:textSize="25dp"
                        android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/quality_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="your review "
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/review_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:stepSize="0.01" />
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="clo=ick on the reservation to review "
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ListView
                    android:id="@+id/reservations_list"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />


            </LinearLayout>


        </LinearLayout>

    </com.example.a2020_android_training.VerticalScrollview>

</androidx.constraintlayout.widget.ConstraintLayout>